@using NoiThat.Models
@using NoiThat.Utilities
@model IndexViewModel
@{
    ViewBag.Title = "Nội thất giá rẻ Bình Dương ";
}
@section metatags
{
    <meta name="keywords" content="nội thất giá rẻ bình dương, nội thất chung cư bình dương, nội thất bình dương, thi công nội thất bình dương" />
    <meta name="description" content="Chuyên cung cấp các sản phẩm nội thất giá rẻ tại Bình Dương, Nội thất chung cư tại Bình Dương, với đội ngũ thiết kế nội thất nhiều năm kinh nghiêm luôn tạo ra những sản phẩm nội thất giá rẻ tại Bình Dương cũng như các khu vực lân cận." />
}
<!-- Slider -->
@Html.Partial("_slideHomePage", Model.lstSlideHomePage)
<!-- end Slider -->
<!-- header service -->
<div class="header-service">
    <div class="container">
        <div class="row">
            @foreach (var i in Model.lstAboutUsMore)
            {
                <div class="col-lg-3 col-sm-6 col-xs-12">
                    <div class="content">
                        <div class="@i.Descript">&nbsp;</div>
                        <span>
                            <a href="/@i.SEOUrlRewrite-@i.BlogID" title="@i.BlogName"> <strong>@i.BlogName</strong></a>
                        </span>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
<!-- end header service -->
<!-- offer banner section -->
@Html.Partial("_bannerPromotes", Model.lstBannerPro)

<!-- end offer banner section -->
<!-- main container -->
<section class="main-container col1-layout home-content-container">
    <div class="container">
        <div class="row">
            <div class="std">
                <div class="col-lg-8 col-xs-12 col-sm-8 best-seller-pro wow">
                    <div class="slider-items-products">
                        <div class="new_title center">
                            <h2>Bán chạy nhất</h2>
                        </div>
                        <div id="best-seller-slider" class="product-flexslider hidden-buttons">
                            <div class="slider-items slider-width-col4">
                                @Html.Partial("_bestSellerProducts", Model.lstBestSellerproducts)


                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-xs-12 col-sm-4 wow latest-pro small-pr-slider">
                    <div class="slider-items-products">
                        <div class="new_title center">
                            <h2>Sản phẩm mới nhất</h2>
                        </div>
                        <div id="latest-deals-slider" class="product-flexslider hidden-buttons latest-item">
                            <div class="slider-items slider-width-col4">
                                @Html.Partial("_newestProducts", Model.lstLastProducts)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End main container -->
<!-- recommend slider -->

@Html.Partial("_sanPhamNoiBat", Model.lstSanPhamNoiBat)


<!-- End Recommend slider -->
<!-- banner section -->
<div class="top-offer-banner wow">
    <div class="container">
        <div class="row">
            <div class="offer-inner col-lg-12">
                <!--newsletter-wrap-->
                <div class="left">
                    <div class="col-1">
                        <div class="block-subscribe">
                            <div class="newsletter">
                                <form>
                                    <h4><span>Liên hệ với chúng tôi</span></h4>
                                    <h5> Để có được lời tư vấn tốt nhất</h5>
                                    <input type="text" placeholder="Nhập email của bạn" class="input-text required-entry validate-email" title="Sign up for our newsletter" id="newsletter1" name="email">
                                    <button class="subscribe" title="Subscribe" type="submit"><span>Gửi</span></button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col mid">
                        <div class="inner-text">
                            <h3>Tủ<br />
                            Quần Áo</h3>
                        </div>
                        <a href="/chi-tiet-san-pham/tu-quan-ao-da-nang-26"><img src="~/images/offer-banner2.jpg" alt="Nội thất Chung cư Bình Dương"></a>
                    </div>
                    <div class="col last">
                        <div class="inner-text">
                            <h3>Nội thất Bếp</h3>
                        </div>
                        <a href="/san-pham/noi-that-phong-bep-20"><img src="~/images/Bep-Binh-Duong-001.jpg" alt="Nội Thất Bếp Bình Dương"></a>
                    </div>
                </div>
                <div class="right">
                    <div class="col">
                        <div class="inner-text">
                            <h4>Đang Khuyến mãi</h4>
                            <h3>Kệ Tivi</h3>
                            <a href="/chi-tiet-san-pham/ke-ti-vi-phong-khach-16" class="shop-now1">Chi tiết</a>
                        </div>
                        <a href="#" title=""><img src="~/images/Ke-Tv-Binh-Duong-03.jpg" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- End banner section -->
<!-- middle slider -->
@{Html.RenderAction("loadColections", "Home");}
<!-- End middle slider -->
<!-- promo banner section -->
<div class="promo-banner-section container wow">
    <div class="container">
        <div class="row"> <img alt="promo-banner3" src="~/images/bottom-banner.jpg"></div>
    </div>
</div>
<!-- End promo banner section -->
<!-- Latest Blog -->
<!-- End Latest Blog -->
<!-- Featured Slider -->
<section class="featured-pro wow animated parallax parallax-2">
    <div class="container">
        <div class="std">
            <section class="latest-blog container wow">
                <div class="blog-title" style="border-bottom:none">
                    <h2><span>Tin tức - Tư Vấn</span></h2>
                </div>
                <div class="row">
                    @foreach (var i in Model.lstNews)
                    {
                        <div class="col-xs-12 col-sm-4">
                            <div class="blog-img">
                                <img src="@WebConstants.ImgNewsHost/@i.ImageURL" style="height:240px" alt="@i.BlogName">
                                <!--<div class="mask"> <a class="info" href="blog-detail.html">Read More</a> </div>-->
                            </div>
                            <h3><a style="overflow: hidden;text-overflow: ellipsis; display: inherit;" href="/chi-tiet-tin-tuc/@i.SEOUrlRewrite-@i.BlogID">@i.BlogName</a> </h3>
                            <p style="color:#ffffff">
                                @{
                                    var shortString = "";
                                    if (i.Descript.Length >= 102)
                                    {
                                        shortString = i.Descript.Substring(0, 102);
                                    }
                                    else
                                    {
                                        shortString = i.Descript;
                                    }
                                }

                                @shortString  ...
                            </p>
                            <div class="post-date" style="color:#ffffff"><i class="icon-calendar"></i> @Convert.ToDateTime(i.LastModify).ToString(WebConstants.DateFormatVI)</div>
                        </div>
                    }

                </div>
            </section>
        </div>
    </div>
</section>
<!-- End Featured Slider -->
<div id="myModal" class="modal fade" style="top:120px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#1dd301; color:#ffffff">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Mừng Sự Kiện Khai trương showroom mới</h4>
            </div>
            <div class="modal-body">
                <p>Tưng bừng khai trương showroom nội thất mới cùng nhiều chương trình khuyến mãi hấp dẫn.</p>
                <p>
                    <a href="https://noithattanthoi.com" target="_blank">
                        <img src="~/images/bannerQuangcao.jpg" />
                    </a>
                    
                </p>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(document).ready(function () {

            $(".level0 a").removeClass("active");
            $(".level0:first-child a").addClass("active");
            //$("#myModal").modal("show");
        });
    </script>
}