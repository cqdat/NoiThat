@using NoiThat.Utilities
@using NoiThat.Models.DataModels
@model IEnumerable<ProductGroup>
<section class="recommend container">
    <div class="new-pro-slider small-pr-slider" style="overflow:visible">
        <div class="slider-items-products">
            <div class="new_title center">
                <h2>Sản Phẩm Nổi bật</h2>
            </div>
            <div id="recommend-slider" class="product-flexslider hidden-buttons">
                <div class="slider-items slider-width-col3">
                    <!-- Item -->
                    @foreach (var i in Model)
                    {
                        <div class="item">
                            <div class="col-item">
                                <div class="images-container">
                                    <a class="product-image" title="@i.Product.ProductName" href="/chi-tiet-san-pham/@i.Product.SEOUrlRewrite-@i.Product.ProductID"> <img src="@WebConstants.ImgProductHost/@i.Product.Images" class="img-responsive" alt="@i.Product.Images" /> </a>
                                    <div class="actions">
                                        <div class="actions-inner">
                                            @*<ul class="add-to-links">
                                                    <li><a href="wishlist.html" title="Add to Wishlist" class="link-wishlist"><span>Add to Wishlist</span></a></li>
                                                    <li><a href="compare.html" title="Add to Compare" class="link-compare "><span>Add to Compare</span></a></li>
                                                </ul>*@
                                        </div>
                                    </div>
                                    <div class="qv-button-container"> <a href="quick_view.html" class="qv-e-button btn-quickview-1 loadquickview" productid="@i.Product.ProductID"><span><span>Xem nhanh</span></span></a> </div>
                                </div>
                                <div class="info">
                                    <div class="info-inner">
                                        <div class="item-title"> <a title="@i.Product.ProductName" href="/chi-tiet-san-pham/@i.Product.SEOUrlRewrite-@i.Product.ProductID"> @i.Product.ProductName </a> </div>
                                        <!--item-title-->
                                        <div class="item-content">
                                            <div class="ratings">
                                                <div class="rating-box">
                                                    @{
                                                        var rating = i.Product.Rating;
                                                        var r = 0;
                                                        if (rating == 1)
                                                        {
                                                            r = 20;
                                                        }
                                                        if (rating == 2)
                                                        {
                                                            r = 40;
                                                        }
                                                        if (rating == 3)
                                                        {
                                                            r = 60;
                                                        }
                                                        if (rating == 4)
                                                        {
                                                            r = 80;
                                                        }
                                                        if (rating == 5)
                                                        {
                                                            r = 100;
                                                        }
                                                    }
                                                    <div style="width:@r%" class="rating"></div>
                                                </div>
                                            </div>
                                            <div class="price-box">
                                                @*<p class="special-price"> <span class="price"> $45.00 </span> </p>
                                                    <p class="old-price"> <span class="price-sep">-</span> <span class="price"> $50.00 </span> </p>*@
                                            </div>
                                        </div>
                                        <!--item-content-->
                                    </div>
                                    <!--info-inner-->
                                    <div class="actions">
                                        <button type="button" title="Add to Cart" class="button btn-cart"><span>Chi tiết</span></button>
                                    </div>
                                    <!--actions-->
                                    <div class="clearfix"> </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- End Item -->
                </div>
            </div>
        </div>
    </div>
</section>

