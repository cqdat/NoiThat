@model List<NoiThat.Models.DataModels.Product>
@using NoiThat.Utilities

<div class="upsell-pro wow">
    <div class="slider-items-products">
        <div class="new_title center">
            <h2>Sản phẩm hay mua cùng</h2>
        </div>
        <div id="upsell-products-slider" class="product-flexslider hidden-buttons">
            <div class="slider-items slider-width-col4">

                @foreach (var q in Model)
                {
                <div class="item">
                    <div class="col-item">

                        @if (q.IsNew == true)
                        {
                            <div class="new-label new-top-right">Mới</div>
                        }

                        @if (q.IsSale == true)
                        {
                            <div class="sale-label sale-top-left">Sale</div>
                        }


                        <div class="images-container">
                            <a class="product-image" title="@q.SEOTitle" href="/chi-tiet/@q.SEOUrlRewrite-@q.ProductID"> <img src="@WebConstants.ImgProductImage\@q.Images" class="img-responsive" alt="a" /> </a>
                            <div class="actions">
                                <div class="actions-inner">
                                    @*<button type="button" title="Add to Cart" class="button btn-cart"><span>Add to Cart</span></button>*@
                                    <ul class="add-to-links">
                                        <li><a title="Add to Wishlist" class="link-wishlist" href="wishlist.html"><span>Yêu thích</span></a></li>
                                        @*<li><a title="Add to Compare" class="link-compare" href="compare.html"><span>Add to Compare</span></a></li>*@
                                    </ul>
                                </div>
                            </div>
                            <div class="qv-button-container"> <a class="qv-e-button btn-quickview-1 loadquickview" productid="@q.ProductID" href="javascript:"><span><span>Xem Nhanh</span></span></a> </div>
                        </div>

                        <div class="info">
                            <div class="info-inner">
                                <div class="item-title"> <a href="#l" title=" Sample Product"> @q.ProductName </a> </div>
                                <!--item-title-->
                                <div class="item-content">
                                    <div class="ratings">
                                        <div class="rating-box">
                                            <div style="width:60%" class="rating"></div>
                                        </div>
                                    </div>
                                    <div class="price-box">
                                        <p class="special-price"> <span class="price"> @q.PriceSale </span> </p>
                                        <p class="old-price"> <span class="price-sep">-</span> <span class="price"> @q.Price </span> </p>
                                    </div>
                                </div>
                                <!--item-content-->
                            </div>
                            <!--info-inner-->
                            <!--actions-->

                            <div class="clearfix"> </div>
                        </div>

                    </div>
                </div>
                }


            </div>
        </div>
    </div>
</div>
