@using System.Configuration
@using NoiThat.Models
@using NoiThat.Utilities
@model CollectionsViewModel
@{
    ViewBag.Title = Model.detail.ProductName;
    Helpers h = new Helpers();
}
@section metatags
{
    <meta name="keywords" content="@Model.detail.SEOKeywords" />
    <meta name="description" content="@Model.detail.SEOMetadescription" />
}
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <ul>
                <li class="home"> <a href="/" title="trang chủ">Trang chủ</a><i class="icon-long-arrow-right stepby" aria-hidden="true"></i></li>
                <li class="home"> <a href="/bo-suu-tap" title="Bộ sưu tập">Bộ sưu tập</a><i class="icon-long-arrow-right stepby" aria-hidden="true"></i></li>
                <li class="category13"><strong>@Model.detail.ProductName</strong></li>
            </ul>
        </div>
    </div>
</div>
<section class="main-container col2-left-layout">
    <div class="main container">
        

        <div class="row" style="margin-top:10px">
            <div class="col-right sidebar col-sm-3">
                <div role="complementary" class="widget_wrapper13" id="secondary">
                    <div class="popular-posts widget widget__sidebar wow" id="recent-posts-4">
                        <h3 class="widget-title"><span>Cùng chuyên mục</span></h3>
                        <div class="widget-content">
                            <ul class="posts-list unstyled clearfix">
                                @foreach (var j in Model.lstCollection1)
                                {
                                    <li>
                                        <figure class="featured-thumb">
                                            <a href="/bo-suu-tap/@j.SEOUrlRewrite-@j.ProductID">
                                                <img width="80" height="53" alt="blog image" src="@WebConstants.ImgCollectionHost/@j.Images">
                                            </a>
                                        </figure>
                                        <!--featured-thumb-->
                                        <h4><a title="Pellentesque posuere" href="/bo-suu-tap/@j.SEOUrlRewrite-@j.ProductID">@j.ProductName</a></h4>
                                        <p class="post-meta">
                                            <i class="icon-calendar"></i>
                                            <time datetime="2014-07-10T07:09:31+00:00" class="entry-date">@Convert.ToDateTime(Model.detail.Created).ToString(WebConstants.DateFormatVI)</time>
                                            .
                                        </p>
                                    </li>
                                }

                            </ul>
                        </div>
                        <!--widget-content-->
                    </div>
                    <div class="popular-posts widget widget_categories wow" id="categories-2">
                        <h3 class="widget-title"><span>Categories</span></h3>
                        <ul>
                            <li class="cat-item cat-item-19599"><a href="#/first-category">First Category</a></li>
                            <ul>
                            </ul>
                            <li class="cat-item cat-item-19599"><a href="#/second-category">Second Category</a></li>
                            <ul>
                            </ul>
                        </ul>
                    </div>
                    <!-- Banner Ad Block -->
                    <div class="ad-spots widget widget__sidebar">
                        <h3 class="widget-title"><span>Quảng cáo</span></h3>
                        <div class="widget-content"><a target="_self" href="#" title=""><img alt="offer banner" src="~/images/RHS-banner-img.jpg"></a></div>
                    </div>

                </div>
            </div>
            <div class="col-main col-sm-9 wow">
                <div class="row">
                    <section class="col-main col-sm-12">

                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            @*<ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>*@

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" style="margin-top:unset">
                                <div class="item active">
                                    <img src="@WebConstants.ImgCollectionHost/@Model.detail.Images" alt="@Model.detail.Images">
                                </div>
                                @foreach (var i in Model.lstImages)
                                {
                                    <div class="item">
                                        <img src="@WebConstants.ImgProductHost/@i.URLImage" alt="@i.URLImage">
                                    </div>
                                }




                                @*<div class="item">
                            <img src="https://noithatahome.vn/wp-content/uploads/6-4.jpg" alt="New York">
                        </div>*@
                            </div>

                            <!-- Left and right controls -->
                            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                    </section>

                </div>
                <div class="blog-wrapper" id="main">
                    <div class="site-content" id="primary">
                        <div role="main" id="content">
                            <article class="blog_entry clearfix" id="post-29">
                                <header class="blog_entry-header clearfix">
                                    <div class="blog_entry-header-inner">
                                        <h2 class="blog_entry-title"> @Model.detail.ProductName </h2>
                                    </div>
                                    <!--blog_entry-header-inner-->
                                </header>
                                <!--blog_entry-header clearfix-->
                                <div class="entry-content">

                                    <div class="entry-content">
                                        @Html.Raw(@Helpers.ReplaceString(Model.detail.Content, ConfigurationManager.AppSettings["CKImgFinderLocal"], ConfigurationManager.AppSettings["CKImgFinderHost"]))
                                    </div>
                                </div>
                                <footer class="entry-meta">
                                    Đăng bởi <a rel="category tag" title="View all posts in First Category" href="#first-category">@Model.detail.User.UserName</a> lúc
                                    <time datetime="2014-07-10T06:53:43+00:00" class="entry-date">@Convert.ToDateTime(Model.detail.Created).ToString(WebConstants.DateFormatVI)</time>
                                    .
                                </footer>
                            </article>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@section scripts{
    <script type="text/javascript">

    $(document).ready(function () {
       

         $(".level0 a").removeClass("active");
         $("a#menubst").addClass("active");

    

    });

   
    </script>
}